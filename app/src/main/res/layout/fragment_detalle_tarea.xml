<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="presentacion.DetalleTareaFragment"
    android:id="@+id/detalleTareaFragment"
    android:background="#e2f2f2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            >



            <TextView
                android:id="@+id/nombreTareaDetalles"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@color/black"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                >
                <TextView
                    android:id="@+id/categoriaDetalles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border"
                    android:padding="10dp"
                    android:text="Categoria: \n"
                    android:textColor="@color/black" />

                <Space
                    android:layout_width="60dp"
                    android:layout_height="20dp"></Space>

                <TextView
                    android:id="@+id/fechaTareaDetalles"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/rounded_border"
                    android:text="Dia \n Dia #\n Mes \n Hora"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="2dp"
                    android:textSize="20dp"
                    android:backgroundTint="#0c6ce1"/>


            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                ></Space>

            <TextView
                android:id="@+id/descripcionDetalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion de la tarea: \n "
                android:textColor="@color/black"
                android:background="@drawable/rounded_border"
                android:padding="10dp"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                ></Space>


            <TextView
                android:id="@+id/duracionDetalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DuraciÃ³n: \n "
                android:textColor="@color/black"
                android:background="@drawable/rounded_border"
                android:padding="10dp"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"></Space>

            <TextView
                android:id="@+id/planificacionDetalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:padding="10dp"
                android:text="Planificacion: \n "
                android:textColor="@color/black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"></Space>

        </LinearLayout>
    </ScrollView>
</FrameLayout>